{
  "provisioners": [{
    "type": "ansible-local",
    "playbook_file": "/opt/ansible-template/main.yml",
    "playbook_dir": "/opt/ansible-template/",
    "inventory_file": "/opt/ansible-template/inventory/hosts.ini"
  }],
  "builders": [{
      "name": "ansible-template.qcow2",
      "type": "qemu",
      "iso_checksum_type": "sha256",
      "iso_checksum": "",
      "iso_url": "/build/centos.iso",
      "output_directory": "/build/",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "shutdown -P now",
      "disk_size": 8192,
      "format": "qcow2",
      "headless": true,
      "accelerator": "kvm",
      "http_directory": "/build/kickstart",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "changeme",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "vnc_port_min": 5900,
      "vnc_port_max": 5900,
      "boot_command": [
        "<tab> append initrd=initrd.img inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-isolinux-packer.cfg<enter><wait>"
      ]
    }]
}
